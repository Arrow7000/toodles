// Variables
$item-label-color=#663399;
$page-back=#efefef;
html {
    font-family: 'PT Sans', sans-serif;
    font-size 140%;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    background-color $page-back
}

body {
    // overflow-y hidden;
}

*,
*:before,
*:after {
    box-sizing: inherit;
}

.outer-container {
    margin 0 auto;
    @media (max-width 568px) {
        width 100%;
    }
    @media (min-width 568px) {
        width 80%;
    }
    @media (min-width 1240px) {
        width 760px;
    }
}

.header {
    margin-top: 0;
    text-align center;
    /* 3d stuff prevents half-pixel blurriness*/
    -webkit-transform-style: preserve-3d;
    -moz-transform-style: preserve-3d;
    transform-style: preserve-3d;
    height 250px;
    h1,
    h2,
    h3 {
        position: relative;
        top: 50%;
        transform: translateY(-50%);
        margin-bottom 20px;
    }
    &.divider {
        margin-top 50px;
        height 100px;
    }
}

.items-container {
    .item {
        margin-bottom 25px;
        width 100%;
        color: #fefefe;
        transition: all 0.5s ease-out;
        display block;
        text-align center;
        overflow: hidden;
        .item-section {
            padding-top: 25px;
            padding-bottom: 25px;
            overflow-x: hidden;
            &.item-label {
                background-color $item-label-color;
                width 65%;
                float: left;
                text-align left;
                padding 25px;
                white-space: nowrap;
                transition: all 0.5s ease-out;
                &:empty {
                    background-color alpha($item-label-color, 0.25);
                }
            }
            &.item-tick {
                width 25%;
                background-color #26A65B;
                float: left;
                transition: all 0.5s ease-out;
            }
            &.item-del {
                width 10%;
                background-color $page-back;
                background-color #D2527F;
                float: left;
                transition: all 0.5s ease-out;
            }
        }
        &.ticked {
            animation: tickItem 0.75s ease-out //cubic-bezier(.08,1.1,.47,.89);
            max-height: 0;
            margin-bottom: 0;
            .item-section {
                animation: tickItemSection 0.75s ease-out //cubic-bezier(.08,1.1,.47,.89);
                max-height: 0;
                overflow-y hidden;
            }
            .item-label {
                width 0;
                padding-right 0;
                padding-left 0;
            }
            .item-tick {
                width 100%;
            }
            .item-del {
                width 0;
            }
        }
        &.deleted {
            .item-label {
                width 0;
                padding-right 0;
                padding-left 0;
            }
            .item-tick {
                width 0;
            }
            .item-del {
                width 100%;
            }
        }
        &.empty {
            .item-label {
                width 100%
            }
            .item-tick {
                width 0;
            }
            .item-del {
                width 0;
            }
        }
    }
    // Completed items list
    &.completed {
        margin-bottom 150px;
        .item-section {
            &.item-label {
                background-color alpha($item-label-color, 0.3);
                width 100%;
            }
            &.item-tick {
                display none;
            }
            &.item-del {
                display none;
            }
        }
    }
}

@keyframes tickItem {
    0% {
        max-height 85px;
        margin-bottom 25px;
    }
    66.66% {
        max-height 85px;
        margin-bottom: 25px;
    }
    100% {
        max-height: 0;
        margin-bottom: 0;
    }
}

@keyframes tickItemSection {
    0% {
        max-height 85px;
    }
    66.66% {
        max-height 85px;
    }
    100% {
        max-height: 0;
    }
}


