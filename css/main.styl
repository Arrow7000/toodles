.item-container {
    .item {
        // margin-bottom 25px;
        width 100%;
        // transition: all 0.5s ease-out;
        // color: $page-back;
        color: #fefefe;
        display block;
        text-align center;
        overflow: hidden;
        // All item sections
        .item-section {
            padding-top: 25px;
            padding-bottom: 25px;
            overflow: hidden;
            max-height 100px;
            margin-bottom 25px;
            transition: color 0.3s, background-color 0.5s ease-in, width 0.5s ease-in, padding-left 0.5s ease-in, padding-right 0.5s ease-in, max-height 0.5s 0.5s ease-in, padding-top 0.5s 0.5s ease-in, padding-bottom 0.5s 0.5s ease-in, margin-bottom 0.6s 0.5s ease-in;
            &.item-label {
                background-color $item-label-color;
                color: #fefefe;
                // color $page-back; 
                width 65%;
                @media (min-width 820px) {
                    width 77.5%;
                }
                float: left;
                text-align left;
                padding-top 25px;
                padding-bottom 25px;
                padding-right 25px;
                padding-left 25px;
                white-space: nowrap;
                &:empty {
                    &:last-child {
                        &:before {
                            content: "Add an item";
                            display: block;
                        }
                    }
                    &:before {
                        content: "Add an item";
                        display: block;
                    }
                }
            }
            &.item-tick {
                width 25%;
                @media (min-width 820px) {
                    width 15%;
                }
                background-color $item-tick-color;
                float: left;
            }
            &.item-del {
                width 10%;
                @media (min-width 820px) {
                    width 7.5%;
                }
                // background-color $page-back;
                background-color $item-del-color;
                float: left;
            }
        }
        &.empty {
            .item-label {
                width 100%;
                // background-color alpha($item-label-color, 0.25);
                background-color #90CAF9;
                color alpha(#000, 0.87);
            }
            .item-tick {
                width 0;
            }
            .item-del {
                width 0;
            }
        }
        // Ticked item sections
        &.ticked {
            .item-section {
                max-height: 0;
                padding 0;
                margin-bottom 0;
            }
            .item-label {
                width 0;
                padding-right 0;
                padding-left 0;
            }
            .item-tick {
                width 100%;
            }
            .item-del {
                width 0;
            }
        }
        // Deleted item sections
        &.deleted {
            .item-section {
                max-height: 0;
                padding 0;
                margin-bottom 0;
            }
            .item-label {
                width 0;
                padding-right 0;
                padding-left 0;
            }
            .item-tick {
                width 0;
            }
            .item-del {
                width 100%;
            }
        }
        &.appear {
            -webkit-animation: itemAppear 0.5s forwards;
        }
        &.disappear {
            -webkit-animation: itemDisappear 0.5s forwards;
        }
    }
    // Completed items list
    &#completed-item-container,
    &#archived-item-container {
        margin-bottom 150px;
        .item-section {
            &.item-label {
                background-color alpha($item-label-color, 0.5);
                width 70%;
            }
            &.item-tick {
                // display none;
                background-color: alpha($item-tick-color, 0.5);
                width: 20%;
                i:before {
                    content: "\f106";
                }
            }
            &.item-del {
                // display none;
                background-color: alpha($item-del-color, 0.5);
                width: 10%;
                i.fa.fa-times:before {
                    content: "\f187";
                }
            }
        }
        .ticked {
            // .item-section {
            //     max-height: 0;
            //     padding 0;
            //     margin-bottom 0;
            // }
            .item-label {
                width 0;
                padding-right 0;
                padding-left 0;
            }
            .item-tick {
                width 100%;
            }
            .item-del {
                width 0;
            }
        }
        .deleted {
            // .item-section {
            //     max-height: 0;
            //     padding 0;
            //     margin-bottom 0;
            // }
            .item-label {
                width 0;
                padding-right 0;
                padding-left 0;
            }
            .item-tick {
                width 0;
            }
            .item-del {
                width 100%;
            }
        }
    }
}

.archived-items {
    display: none;
    #archived-item-container>.item>.item-section {
        &.item-label {
            width 100%;
        }
        &.item-tick {
            width 0;
        }
        &.item-del {
            width 0;
        }
    }
}

.login-box {
    background-color $item-label-color;
    color alpha(#fff, 0.87);
    // height: 200px;
    width: 80%;
    margin 0 auto;
    padding 45px;
    max-width: 600px;
    label,
    input {
        display block;
        margin auto;
        // margin-top 15px;
        margin-bottom 15px;
        width: 100%;
        border none;
        text-align center;
    }
    input {
        background $page-back;
        color alpha(#000, 0.87);
        padding 10px;
    }
    input[type="submit"] {
        background-color $item-tick-color;
        padding 15px;
        margin-bottom 0;
        margin-top 30px;
        color alpha(#fff, 0.87);
    }
    @media (max-width 568px) {
        width 100%;
        padding-left: 0;
        padding-right: 0;
        input {
            width 100%;
        }
    }
}

@keyframes itemAppear {
    0% {
        max-height: 0;
    }
    100% {
        max-height 105px;
    }
}

@keyframes itemDisappear {
    0% {
        max-height 105px;
    }
    100% {
        max-height: 0;
    }
}


